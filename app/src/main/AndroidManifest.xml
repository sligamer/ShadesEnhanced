<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lab43.sligamer.shadesenhanced">

    <application
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lab43.sligamer.shadesenhanced.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lab43.sligamer.shadesenhanced.InformationActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.lab43.sligamer.shadesenhanced.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lab43.sligamer.shadesenhanced.MainActivity">
            </meta-data>
        </activity>
    </application>

</manifest>